<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#F3F3F3"/>
                    <corners android:radius="96.8px"/>
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <solid android:color="@color/white"></solid>
                    <corners
                        android:radius="96.8px"/>
                    <padding
                        android:left="5dp"
                        android:top="13dp"
                        android:right="7dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true" android:state_selected="true">
        <layer-list>
            <!-- BUTTON alttan gÃ¶lge
              android:right="5px" to make it round-->
            <item android:bottom="2px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <solid android:color="@color/primary"></solid>
                    <corners
                        android:radius="96.8px"/>
                    <padding
                        android:left="5dp"
                        android:top="13dp"
                        android:right="7dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>