<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#D9D9D9"/>
                    <!-- alttan gölge -->
                    <corners android:radius="96.8px"/>
                </shape>
            </item>
            <!-- BUTTON alttan gölge
              android:right="5px" to make it round-->
            <item android:bottom="2px">
                <shape>
                    <padding android:bottom="2dp"/>
                    <solid android:color="@color/white"></solid>
                    <corners
                        android:radius="96.8px"/>
                    <padding
                        android:left="5dp"
                        android:top="13dp"
                        android:right="7dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#D9D9D9"/>
                    <corners android:radius="96.8px"/>

                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <solid android:color="@color/white"></solid>
                    <corners android:radius="96.8px"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>