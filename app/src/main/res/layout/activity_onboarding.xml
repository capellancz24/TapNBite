<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_2.0"
    tools:context=".Onboarding_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="560px"
            android:layout_height="500px"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            app:srcCompat="@drawable/ic_obimage1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/atyp_semibold"
            android:textAlignment="center"
            android:textSize="64px"
            android:textColor="@color/text"
            android:text="Welcome" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/ob_text1"
            android:fontFamily="@font/atyp_medium"
            android:textSize="40px"
            android:textColor="@color/text"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:padding="10dp">

        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="600px"
            android:layout_height="120px"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingTop="2dp"
            android:background="@drawable/orange_btn"
            android:fontFamily="@font/atyp_bold"
            android:textColor="@color/light_2.0"
            android:textSize="36px"
            android:text="Next" />

    </LinearLayout>
</RelativeLayout>