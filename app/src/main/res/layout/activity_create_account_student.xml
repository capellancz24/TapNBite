<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_2.0"
    tools:context=".CreateAccountStudent_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="98px"
            android:layout_height="98px"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_create" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/atyp_semibold"
            android:text="Create Your Account"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="36px" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/atyp_medium"
            android:text="@string/create_account_student"
            android:textAlignment="center"
            android:textSize="32px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="387.21px"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@drawable/roundwhite_btn"
                android:fontFamily="@font/atyp_semibold"
                android:text="As a Canteen Staff"
                android:textAllCaps="false"
                android:textColor="#979797"
                android:textSize="33.51px" />

            <Button
                android:id="@+id/button3"
                android:layout_width="387.21px"
                android:layout_height="wrap_content"
                android:background="@drawable/roundprimary_btn"
                android:fontFamily="@font/atyp_semibold"
                android:layout_marginLeft="8dp"
                android:paddingTop="2dp"
                android:text="As a Student"
                android:textSize="33.51px"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="794px"
                android:layout_height="102.6px"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="3dp"
                android:background="@drawable/roundtextinput"
                android:ems="10"
                android:fontFamily="@font/atyp_medium"
                android:hint="Full Name"
                android:inputType="text"
                android:textColorHint="#979797"
                android:textSize="36.46px">

            </EditText>

            <EditText
                android:id="@+id/editTextText2"
                android:layout_width="794px"
                android:layout_height="102.6px"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="3dp"
                android:background="@drawable/roundtextinput"
                android:ems="10"
                android:fontFamily="@font/atyp_medium"
                android:hint="School ID"
                android:inputType="text"
                android:textColorHint="#979797"
                android:textSize="36.46px" />

            <EditText
                android:id="@+id/editTextText3"
                android:layout_width="794px"
                android:layout_height="102.6px"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="3dp"
                android:background="@drawable/roundtextinput"
                android:ems="10"
                android:fontFamily="@font/atyp_medium"
                android:hint="NU Email"
                android:inputType="text"
                android:textColorHint="#979797"
                android:textSize="36.46px" />

            <EditText
                android:id="@+id/editTextText4"
                android:layout_width="794px"
                android:layout_height="102.6px"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="3dp"
                android:background="@drawable/roundtextinput"
                android:ems="10"
                android:fontFamily="@font/atyp_medium"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="#979797"
                android:textSize="36.46px" />

            <EditText
                android:id="@+id/editTextText5"
                android:layout_width="794px"
                android:layout_height="102.6px"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="3dp"
                android:background="@drawable/roundtextinput"
                android:ems="10"
                android:fontFamily="@font/atyp_medium"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColorHint="#979797"
                android:textSize="36.46px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:paddingLeft="8dp"
                android:fontFamily="@font/atyp_medium"
                android:textSize="36.46px"
                android:textColor="@color/text"
                android:text="@string/terms_and_conditions" />
        </LinearLayout>

        <Button
            android:id="@+id/button6"
            android:layout_width="695.07px"
            android:layout_height="95.71px"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:paddingTop="5dp"
            android:background="@drawable/roundprimary_btn"
            android:fontFamily="@font/atyp_semibold"
            android:textSize="36.46px"
            android:textColor="@color/light"
            android:text="Sign Up" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/atyp_medium"
                android:textSize="31.9px"
                android:textColor="#979797"
                android:textAlignment="center"
                android:text="Already have an Account?" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/atyp_semibold"
                android:layout_marginTop="3dp"
                android:textSize="31.9px"
                android:textColor="@color/primary"
                android:textAlignment="center"
                android:text="LOG IN" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>