<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_2.0"
    android:gravity="center"
    tools:context=".CreateAccountStudent_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:contentDescription="@string/ic_createacc"
                app:srcCompat="@drawable/ic_create" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/atyp_semibold"
                android:text="@string/create_your_account"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/atyp_medium"
                android:text="@string/create_account_student"
                android:textAlignment="center"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtLayoutFullName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    app:startIconDrawable="@drawable/ic_person"
                    app:boxStrokeColor="@color/primary"
                    app:boxStrokeWidth="1.5dp"
                    app:boxBackgroundColor="@color/white"
                    app:hintTextColor="#025CF8"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@font/atyp_medium"
                        android:fontFamily="@font/atyp_medium"
                        android:textSize="15sp"
                        android:inputType="textPersonName"
                        android:hint="Full Name" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtLayoutEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    app:startIconDrawable="@drawable/ic_emailalternate"
                    app:boxStrokeColor="@color/primary"
                    app:boxStrokeWidth="1.5dp"
                    app:boxBackgroundColor="@color/white"
                    app:hintTextColor="#025CF8"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputNUEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@font/atyp_medium"
                        android:fontFamily="@font/atyp_medium"
                        android:textSize="15sp"
                        android:inputType="textEmailAddress"
                        android:hint="NU Email" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtLayoutNUID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    app:startIconDrawable="@drawable/ic_school"
                    app:boxStrokeColor="@color/primary"
                    app:boxStrokeWidth="1.5dp"
                    app:boxBackgroundColor="@color/white"
                    app:hintTextColor="#025CF8"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputNUID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@font/atyp_medium"
                        android:fontFamily="@font/atyp_medium"
                        android:textSize="15sp"
                        android:inputType="text|number"
                        android:hint="School ID" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtLayoutPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:boxStrokeColor="@color/primary"
                    app:boxStrokeWidth="1.5dp"
                    app:boxBackgroundColor="@color/white"
                    app:hintTextColor="#025CF8"
                    app:endIconMode="none"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/atyp_medium"
                        android:textSize="15sp"
                        android:inputType="textPassword"
                        android:hint="Password" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtLayoutConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    app:cursorColor="@color/primary"
                    app:cursorErrorColor="@color/red"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:boxStrokeColor="@color/primary"
                    app:boxStrokeWidth="1.5dp"
                    app:boxBackgroundColor="@color/white"
                    app:hintTextColor="#025CF8"
                    app:endIconMode="none"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/atyp_medium"
                        android:textSize="15sp"
                        android:inputType="textPassword"
                        android:hint="Confirm Password" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <CheckBox
                    style="@style/Widget.Material3.CompoundButton.CheckBox"
                    android:backgroundTint="@color/primary"
                    android:id="@+id/cbAgreement"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/atyp_medium"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/terms_and_conditions"
                    android:textColor="@color/text"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:padding="15dp"
                android:backgroundTint="@color/primary"
                android:fontFamily="@font/atyp_semibold"
                android:paddingTop="4dp"
                android:text="@string/sign_up"
                android:textColor="@color/light"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/atyp_medium"
                    android:text="@string/already_have_an_account"
                    android:textAlignment="center"
                    android:textColor="#979797"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#0000"
                    android:fontFamily="@font/atyp_semibold"
                    android:paddingBottom="20dp"
                    android:text="@string/login"
                    android:textAlignment="center"
                    android:textColor="@color/primary"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>